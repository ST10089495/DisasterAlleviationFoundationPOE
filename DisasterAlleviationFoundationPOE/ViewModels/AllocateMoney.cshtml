<form asp-controller="Allocation" asp-action="AllocateMoney" method="post">
    <div>
        <label for="disasterId">Select Disaster:</label>
        <select asp-for="DisasterId" asp-items="new SelectList(Model.ActiveDisasters, "Id", "Name")"></select>
    </div>
    <div>
        <label for="amount">Amount:</label>
        <input asp-for="Amount" />
    </div>
    <button type="submit">Allocate Money</button>
</form>
