@{
}
<form asp-controller="Allocation" asp-action="AllocateGoods" method="post">
    <div>
        <label for="disasterId">Select Disaster:</label>
        <select asp-for="DisasterId" asp-items="new SelectList(Model.ActiveDisasters, "Id", "Name")"></select>
    </div>
    <div>
        <label for="goodId">Select Good:</label>
        <select asp-for="GoodId" asp-items="new SelectList(Model.AvailableGoods, "Id", "Name")"></select>
    </div>
    <div>
        <label for="quantity">Quantity:</label>
        <input asp-for="Quantity" />
    </div>
    <button type="submit">Allocate Goods</button>
</form>
